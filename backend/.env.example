# Azure Storage configuration
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_SBOMS=sboms
AZURE_STORAGE_CONTAINER_SCANS=scans
AZURE_STORAGE_CONTAINER_RUNS=runs
AZURE_STORAGE_BLOB_PREFIX_DELIMITER=-

