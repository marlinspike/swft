# Azure Storage configuration
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER_SBOMS=sboms
AZURE_STORAGE_CONTAINER_SCANS=scans
AZURE_STORAGE_CONTAINER_RUNS=runs
AZURE_STORAGE_BLOB_PREFIX_DELIMITER=-

# Azure AD service principal (optional when using managed identity)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Local development override (point to extracted blobs instead of Azure)
LOCAL_BLOB_ROOT=

# Cache behaviour
CACHE_TTL_SECONDS=60
CACHE_MAX_ITEMS=256

# Assistant integration
OPENAI_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_API_BASE=
OPENAI_API_VERSION=
OPENAI_ORG_ID=
ASSISTANT_MODEL_CONFIG_PATH=backend/app/assistant/model_config.json
ASSISTANT_HISTORY_TTL_SECONDS=900
ASSISTANT_HISTORY_MAX_ITEMS=256
