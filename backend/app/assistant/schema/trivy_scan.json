{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trivy Container Scan",
  "type": "object",
  "required": ["target", "summary", "results"],
  "properties": {
    "target": { "type": "string", "description": "Container image or filesystem target" },
    "summary": {
      "type": "object",
      "required": ["critical", "high", "medium", "low", "unknown", "total"],
      "properties": {
        "critical": { "type": "integer" },
        "high": { "type": "integer" },
        "medium": { "type": "integer" },
        "low": { "type": "integer" },
        "unknown": { "type": "integer" },
        "total": { "type": "integer" },
        "lastUpdated": { "type": "string", "format": "date-time" }
      }
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["target", "class", "vulnerabilities"],
        "properties": {
          "target": { "type": "string" },
          "class": { "type": "string", "enum": ["os-pkgs", "applications", "config"] },
          "type": { "type": "string" },
          "vulnerabilities": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["vulnerabilityID", "severity"],
              "properties": {
                "vulnerabilityID": { "type": "string" },
                "severity": { "type": "string" },
                "title": { "type": "string" },
                "pkgName": { "type": "string" },
                "installedVersion": { "type": "string" },
                "fixedVersion": { "type": "string" },
                "cvss": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "source": { "type": "string" },
                      "score": { "type": "number" },
                      "vector": { "type": "string" }
                    }
                  }
                },
                "primaryURL": { "type": "string" },
                "references": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      }
    },
    "misconfigurations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "severity", "title"],
        "properties": {
          "id": { "type": "string" },
          "severity": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "resolution": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": true
}
